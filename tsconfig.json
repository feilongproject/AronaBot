{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "es2016"
    ],
    "alwaysStrict": true,
    //"allowJs": true,
    "strict": true,
    "preserveConstEnums": true,
    //"moduleResolution": "node",
